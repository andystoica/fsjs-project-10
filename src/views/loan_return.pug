extends layout

block content
  h1= pageTitle

  if errors
    ul
      each error in errors
        li
          em= error.message

  p
    strong Book Title: 
    |
    = loan.Book.title
  p
    strong Loaned By: 
    |
    = loan.Patron.name
  p
    strong Loaned On: 
    |
    = loan.loaned_on
  p
    strong Return By: 
    |
    = loan.return_by
  form(method= 'post' action= '/loans/return/' + loan.id)
    p
      label(for= 'returned_on')= 'Returned on: '
      input(id= 'returned_on' name= 'returned_on' type= 'text' value= loan.returned_on)
    p
      input(type= 'submit' value= 'Return Book')
      input(type= 'hidden' value= loan.id name= 'id')