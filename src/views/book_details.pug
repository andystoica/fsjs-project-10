extends layout

block content
  h1= 'Book: ' + book.title

  form
    p
      label(for= 'title')= 'Title'
      input(id= 'title' type= 'text' value= '')
    p
      label(for= 'author')= 'Author'
      input(id= 'author' type= 'text' value= '')
    p
      label(for= 'genre')= 'Genre'
      input(id= 'genre' type= 'text' value= '')
    p
      label(for= 'first_published')= 'First Published'
      input(id= 'first_published' type= 'text' value= '')
    p
      input(type= 'submit' value= 'Update')

  h2= 'Loan History'
  table
    thead
      tr
        th= 'Book'
        th= 'Patron'
        th= 'Loaned on'
        th= 'Return by'
        th= 'Returned on'
        th= 'Action'
    tbody
      tr
        td
          a(href= '')= 'A Brief History of Time'
        td
          a(href= '')= 'Andrew Chalkley'
        td= '2015-12-12'
        td= '2015-12-12'
        td= ''
        td
          a(href= '' class= 'button')= 'Return Book'